{
  "name": "emblem-vault-sdk",
  "version": "3.1.1",
  "description": "Emblem Vault Software Development Kit",
  "main": "dist/index.js",
  "scripts": {
    "bump:major": "node ./script/bump.js major",
    "bump:minor": "node ./script/bump.js minor",
    "bump:patch": "node ./script/bump.js patch",
    "test": "tsc && mocha 'test/**/*.spec.js'",
    "test:watch": "mocha --watch 'test/**/*.spec.js'",
    "test:coverage": "nyc mocha 'test/**/*.spec.js'",
    "build": "tsc",
    "postbuild": "node ./script/version.js && mv dist/index.d.ts types/index.d.ts && mv dist/types.d.ts types/types.d.ts && mv dist/utils.d.ts types/utils.d.ts && mv dist/derive.d.ts types/derive.d.ts",
    "bundle": "npm run build && browserify dist/index.js -o dist/bundle.js && cp dist/bundle.js docs/bundle.js",
    "watch": "onchange 'src/**/*.ts' -- npm run bundle"
  },
  "browser": {
    "./dist/clients/emblemVaultSolanaWalletClient.js": false,
    "./dist/clients/emblemVaultWalletClient.js": false
  },
  "types": "types/index.d.ts",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.0",
    "@types/crypto-js": "^4.2.2",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "browserify": "^17.0.1",
    "chai": "^4.5.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "onchange": "^7.1.0",
    "puppeteer": "^21.6.1",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsify": "^5.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@bitcoin-js/tiny-secp256k1-asmjs": "^2.2.3",
    "@ethersproject/bignumber": "^5.7.0",
    "@solana/web3.js": "^1.98.0",
    "@toruslabs/fetch-node-details": "^8.0.0",
    "@toruslabs/torus.js": "^6.2.0",
    "bchaddrjs": "^0.5.2",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bitcore-mnemonic": "^10.0.23",
    "crypto-js": "^4.2.0",
    "ethereumjs-util": "^7.1.5",
    "install": "^0.13.0",
    "npm": "^10.4.0",
    "sats-connect": "^1.4.1",
    "tiny-secp256k1": "^2.2.3",
    "uninstall": "^0.0.0",
    "viem": "^2.26.3",
    "web3": "^4.4.0"
  },
  "engines": {
    "node": ">=20.5.1"
  }
}
